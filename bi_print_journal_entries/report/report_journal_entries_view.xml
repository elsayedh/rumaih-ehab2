<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

		<template id="journal_entry_template_report_view">
			<t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':'en_US'})"/>
                <div class="page"  >
             <div>
             <h3 class="text-center mb32"  >
                                <strong>Journal Entry</strong>
                            </h3>
                        </div>

                <div class="row" id="journal_information">
                        <div class="col-4">

                   <div class="text-left  ">
                    <strong>Date :</strong>
                   <p t-field="o.date"/>
                    </div>

                        <div  >
                            <strong>Created By:</strong>
                               <p t-field="o.create_uid"/>
                        </div>

                        </div>


               
                    <div class="col-4">
                        <div>
                            <strong>Journal :</strong>
                            <p t-field="o.journal_id"/>
                        </div>
                        <div class="text-left">
                            <strong>Reference :</strong>
                            <p t-field="o.ref"/>
                        </div>
                    </div>

                     <div class="col-4">
                      <div  >
                            <strong>Journal No:</strong>
                               <p t-field="o.name"/>
                        </div>

                    </div>
                </div>
<br/><br/>
                <table style="border-collapse: collapse;width: 100%;  " class="table table-sm">
                    <thead>
                        <tr style="white-space: nowrap;background-color: #f2f2f2;  " class="text-center">
                            <th >Branch</th>
                            <th  >Activities</th>
                            <th  >Acc. No</th>
                            <th  >Acc. Name</th>
                             <th>Debit</th>
                            <th>Credit</th>
                            <th>Description</th>
                        </tr>
                    </thead>  
                    <tbody >
                        <t t-set="total" t-value="0.0"/>
                        <t t-set="total1" t-value="0.0"/>
                        <t t-foreach="o.line_ids" t-as="line">    
                        <tr  >
                            <td >
                                <span t-field="line.branch_id" />
                            </td>
                              <td  >
                                <span t-field="line.analytic_account_id" />
                            </td>
                            <td style="white-space: nowrap;">
                                <span t-field="line.account_id.code" />
                            </td >
                          <td style="white-space: nowrap;">
                                <span t-field="line.account_id.name" />
                            </td>


                            <td style="white-space: nowrap;">
                                <span t-field="line.debit" />
                            </td >
                            <td style="white-space: nowrap;">
                                <span t-field="line.credit" />
                            </td>
                              <td >
                                <span t-field="line.name" />
                            </td>
                        </tr>
                        <t t-set="total" t-value="total + line.debit"/>
                        <t t-set="total1" t-value="total1 + line.credit"/>
                        </t>
                        <tr >


                        <td></td>
                            <td></td>
                            <td></td>
                            <td ><strong>Total:</strong></td>
                            <td width="10%" style="border-top: 1px solid black;  white-space: nowrap;" ><strong>
                                <span><t t-esc="total"/></span>
                            </strong></td>
                             <td width="10%" style="border-top: 1px solid black;  white-space: nowrap;"><strong>
                                <span><t t-esc="total1"/></span>
                            </strong></td>
                            <td></td>
                      </tr>
                    </tbody>
                </table>


               <br/><br/>
              
                                <div class="row" id="signuture_information">
                        <div class="col-4">

                   <div class="text-left  ">
                    <strong>Accountant</strong>

                    </div>
                        </div>


     <div class="col-4">

                   <div class="text-left  ">
                    <strong>Accountant Manager</strong>

                    </div>
                        </div>

       <div class="col-4">

                   <div class="text-left  ">
                    <strong>Audit</strong>

                    </div>
        </div>



                </div>


                </div>
            </t>
		</template>

		<template id="journal_entry_report_template_id">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="bi_print_journal_entries.journal_entry_template_report_view"  t-lang="o.partner_id.lang"/>
				</t>
			</t>
		</template>

	</data>
</odoo>
