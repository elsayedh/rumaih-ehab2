<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

		<template id="journal_entry_template_report_view_ar">
			<t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':'ar_001'})"/>
                <div class="page"  >
             <div>
             <h3 class="text-center mb32"  >
             <strong>قيد يومية</strong>
             </h3>
            </div>

                <div class="row" id="journal_information">
                    <div   >

                   <div class="text-right  ">
                    <strong>التاريخ :</strong>
                   <p t-field="o.date"/>



                            <strong>المستخدم:</strong>
                               <p t-field="o.create_uid"/>
                        </div>

                        </div>


               
                    <div class="col-4"  >


                        <div class="text-right">
                            <strong>المرجع :</strong>
                            <p t-field="o.ref"/>
                        </div>
                           <div class="text-right">
                            <strong>دفترة اليومية :</strong>
                            <p t-field="o.journal_id"/>
                        </div>
                    </div>

                     <div class="col-4" >
                      <div  >
                       <strong>رقم القيد:</strong>
                               <p t-field="o.name"/>
                        </div>

                    </div>
                </div>
                       <br/><br/>
                <table style="border-collapse: collapse;width: 100%;  " class="table table-sm">
                    <thead>
                        <tr style="white-space: nowrap;background-color: #f2f2f2;  " class="text-center">
                            <th>الفرع</th>
                            <th>النشاط</th>
                            <th>رقم الحساب</th>
                            <th>اسم الحساب</th>
                             <th>مدين</th>
                            <th>دائن</th>
                            <th>البيــــــان</th>
                        </tr>
                    </thead>  
                    <tbody >
                        <t t-set="total" t-value="0.0"/>
                        <t t-set="total1" t-value="0.0"/>
                        <t t-foreach="o.line_ids" t-as="line">    
                        <tr  >
                            <td >
                                <span t-field="line.branch_id" />
                            </td>
                              <td  >
                                <span t-field="line.analytic_account_id" />
                            </td>
                            <td style="white-space: nowrap;">
                                <span t-field="line.account_id.code" />
                            </td >
                          <td style="white-space: nowrap;">
                                <span t-field="line.account_id.name" />
                            </td>


                            <td style="white-space: nowrap;">
                                <span t-field="line.debit" />
                            </td >
                            <td style="white-space: nowrap;">
                                <span t-field="line.credit" />
                            </td>
                              <td >
                                <span t-field="line.name" />
                            </td>
                        </tr>
                        <t t-set="total" t-value="total + line.debit"/>
                        <t t-set="total1" t-value="total1 + line.credit"/>
                        </t>
                        <tr >


                        <td></td>
                            <td></td>
                            <td></td>
                            <td ><strong></strong></td>
                            <td width="10%" style="border-top: 1px solid black;  white-space: nowrap;" ><strong>
                                <span><t t-esc="total"/></span>
                            </strong></td>
                             <td width="10%" style="border-top: 1px solid black;  white-space: nowrap;"><strong>
                                <span><t t-esc="total1"/></span>
                            </strong></td>
                            <td></td>
                      </tr>
                    </tbody>
                </table>


               <br/><br/>
              
              <div class="row" id="signuture_information" style="direction: rtl;">
                        <div class="col-2">

                        <div class="text-right  ">
                        <strong>المحاسب</strong>

                        </div>
                        </div>


                          <div class="col-4">

                   <div class="text-right ">
                    <strong>رئيس الحسابات</strong>

                    </div>
                        </div>

                  <div class="col-4">

                   <div class="text-right  ">
                    <strong>المدقق الداخلي</strong>

                    </div>
              </div>



                </div>


                </div>
            </t>
		</template>

		<template id="journal_entry_report_template_id_ar">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="bi_print_journal_entries.journal_entry_template_report_view_ar"  t-lang="o.partner_id.lang"/>
				</t>
			</t>
		</template>

	</data>
</odoo>
