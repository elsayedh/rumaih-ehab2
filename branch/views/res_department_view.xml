<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        

        <!-- Form View of department-->
        <record id="department_res_department_view_form" model="ir.ui.view">
            <field name="name">department.res.department.view.form</field>
            <field name="model">res.department</field>
            <field name="arch" type="xml">
                <form string="department">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>

                            </group>

                        </group>


                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View of department-->
        <record id="department_res_department_view_tree" model="ir.ui.view">
            <field name="name">department.res.department.view.tree</field>
            <field name="model">res.department</field>
            <field name="arch" type="xml">
                <tree string="department">
                    <field name="name"/>

                </tree>
            </field>
        </record>

        <!--View action for department form view and tree view-->
        <record id="department_action_res_department" model="ir.actions.act_window">
            <field name="name">department</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.department</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new department.
                </p>
            </field>
        </record>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="department_menu_res_department" name="department"  parent="base.menu_users" action="department_action_res_department" />

    </data>
</odoo>
