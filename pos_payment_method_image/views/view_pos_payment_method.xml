<odoo>

    <record id="view_pos_payment_method_inherit_form" model="ir.ui.view">
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="before">
                <field name="pos_image" widget="image" class="oe_avatar" />
                
                
            </xpath>
			 <xpath expr="//field[@name='receivable_account_id']" position="attributes">
                    <attribute name="domain">[]</attribute>
          </xpath>
			
        </field>
    </record>
	
	
	 <record id="view_category_property_pos_form" model="ir.ui.view">
            <field name="name">product.category.property.form..posinherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
			
		 <xpath expr="//field[@name='property_account_income_categ_id']" position="before">
            <field name="account_income_pos_categ_id" domain="[('internal_type','=','other'),('deprecated', '=', False)]"/>
          </xpath>
		  
                
            </field>
        </record>


        <record id="product_template_form_view_pos" model="ir.ui.view">
            <field name="name">product.template.form.inherit.pos</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_income_id']" position="before">
                <field name="account_income_pos_categ_id"
                                    domain="[('internal_type','=','other'),('deprecated','=',False)]"
                                    groups="account.group_account_user"/>
                </xpath>

            </field>
        </record>

</odoo>
